.food-container
	h2 添加食物
	.form-like
		p
			label 食物名称
			input(type="text" name="food-name")
		p
			label 食物描述
			input(type="text" name="food-des")
		p
			label 所属类别
			select(name="food-cat")
				option(value="breakfast") 早餐
				option(value="lunch") 午餐
				option(value="dinner") 晚餐
		p
			label 图片链接
			input(type="text" name="food-pic")
		p 
			label
			button(id="add-food") 添加
	h2 食物
	.list.food-list
	.page-control.food-control
		span.pre-page-control 上一页
		span.next-page-control 下一页
	.model-edit
		.form-like
			p
				label 食物名称
				input(type="text" name="edit-food-name" required)
			p
				select(name="edit-food-cat")
					option(value="breakfast") 早餐
					option(value="lunch") 午餐
					option(value="dinner") 晚餐
			p
				label 食物图片
				input(type="text" name="edit-food-pic")
			p
				label
				textarea(name="edit-food-des" rows="20" cols="80" placeholder="请输入食物描述..." required)
			p
				button(id="edit-submit") 修改
				button(class="edit-cancel") 取消
	.model-delete
		.confirm-delete
			p 确认删除吗？
			button.delete-ok 确认
			button.delete-cancel 取消